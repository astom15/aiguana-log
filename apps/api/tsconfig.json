{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true,
		"declarationMap": true,

		"composite": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
